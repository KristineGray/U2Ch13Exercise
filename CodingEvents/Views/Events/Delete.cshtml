@{
}

<h1>Delete Events</h1>

<form method="post">
    @foreach(Event eventData in ViewBag.events)
     {
        <div class="form-group">
            <label>
                <span>@eventData.Name</span>
                <input type="checkbox" name="eventIDs" value="@eventData.ID" class="form-control"/>
            </label>
        </div>
     }
    <input type="submit" name="Delete Selected Events" value="btn btn-danger" />
</form>